<div class="about-us-container fade-in">
  <h1>About Us</h1>
  <div class="about-us-content">
    <%= @about_us %>
  </div>
</div>
<div class="button-container fade-in">
  <%= link_to "Thrifts", thrifts_path, class: "btn btn-primary" %>
  <%= link_to "Finds", posts_path, class: "btn btn-secondary" %>
</div>

<style>
  .about-us-container {
    background-color: #f9f9f9;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    margin: 0 auto 20px;
    font-family: 'Roboto', sans-serif;
    opacity: 0;
    transform: scale(1.2);
    animation: fadeInScale 1.5s forwards;
  }

  .about-us-container h1 {
    font-size: 2.5em;
    color: #333;
    text-align: center;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .about-us-content {
    font-size: 1.2em;
    line-height: 1.6;
    color: #555;
    text-align: justify;
    font-weight: 400;
  }

  .about-us-content p {
    margin-bottom: 20px;
  }

  .button-container {
    text-align: center;
    margin-top: 20px;
    padding: 20px;
    background-color: #333;
    border-radius: 10px;
    max-width: 800px;
    margin: 0 auto;
    opacity: 0;
    transform: scale(1.2);
    animation: fadeInScale 1.5s forwards;
    animation-delay: 0.5s;
  }

  .btn:hover {
    background-color: #5e6681;
    color: #ffeba7;
    box-shadow: 0 8px 24px 0 rgb(16 39 112 / 20%);
  } 
  .btn {
    margin: 1rem 0;
    border: none;
    border-radius: 4px;
    font-weight: bold;
    font-size: .8em;
    text-transform: uppercase;
    padding: 0.6em 1.2em;
    background-color: #ffeba7;
    color: #5e6681;
    box-shadow: 0 8px 24px 0 rgb(255 235 167 / 20%);
    transition: all .3s ease-in-out;
  }
  .btn-link {
    color: #f5f5f5;
    display: block;
    font-size: .75em;
    transition: color .3s ease-out;
  }

  .btn-details {
    background-color: transparent;
    color: white;
    border: 1px solid white;
    transition: background-color 0.3s;
  }

  .btn-details:hover {
    background-color: white;
    color: black;
  }

  @keyframes fadeInScale {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
