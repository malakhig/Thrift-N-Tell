<div class="container mt-4">
  <div class="row align-items-center">
    <div class="col-md-4">

      <% if thrift.images.attached? %>
        <div id="carousel<%= thrift.id %>" class="carousel-wrapper carousel slide" data-bs-ride="carousel">
          <!-- Indicators -->
          <div class="carousel-indicators">
            <% thrift.images.each_with_index do |image, index| %>
              <button type="button" data-bs-target="#carousel<%= thrift.id %>" data-bs-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>" aria-current="<%= 'true' if index == 0 %>" aria-label="Slide <%= index + 1 %>"></button>
            <% end %>
          </div>

          <!-- Carousel Items -->
          <div class="carousel-inner">
            <% thrift.images.each_with_index do |image, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= image_tag(image, class: "d-block w-100", alt: "Carousel image") %>
              </div>
            <% end %>
          </div>

          <!-- Controls -->
          <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= thrift.id %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= thrift.id %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      <% end %>

      <br>
    </div>
    <div class="col-md-8">
      <div id="<%= dom_id thrift %>">
        <p>
          <strong>Store:</strong>
          <%= thrift.store %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= thrift.address %>
        </p>

        <p>
          <strong>Phone:</strong>
          <%= thrift.phone %>
        </p>

        <p>
          <strong>City:</strong>
          <%= thrift.city %>
        </p>

        <p>
          <strong>State:</strong>
          <%= thrift.state %>
        </p>
        <br>
      </div>
    </div>
  </div>
</div>



