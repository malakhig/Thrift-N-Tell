<%= form_with(model: thrift, id: 'thrift-form') do |form| %>
  <% if thrift.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(thrift.errors.count, "error") %> prohibited this thrift from being saved:</h2>
      <ul>
        <% thrift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :store, style: "display: block" %>
    <%= form.text_field :store, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address,class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :city, style: "display: block" %>
    <%= form.text_field :city, class:"form-control" %>
  </div>
  
  <div class="dropdown">
    <%= form.label :state %>
    <%= form.select :state, [['Alabama', 'AL'], ['Alaska', 'AK'], ['Arizona', 'AZ'], ['Arkansas', 'AR'],['California', 'CA'], ['Colorado', 'CO'], ['Connecticut', 'CT'], ['Delaware', 'DE'], ['District Of Columbia', 'DC'], ['Florida', 'FL'], ['Georgia', 'GA'], ['Hawaii', 'HI'], ['Idaho', 'ID'], ['Illinois', 'IL'], ['Indiana', 'IN'], ['Iowa', 'IA'], ['Kansas', 'KS'], ['Kentucky', 'KY'], ['Louisiana', 'LA'], ['Maine', 'ME'], ['Maryland', 'MD'], ['Massachusetts', 'MA'], ['Michigan', 'MI'], ['Minnesota', 'MN'], ['Mississippi', 'MS'], ['Missouri', 'MO'], ['Montana', 'MT'], ['Nebraska', 'NE'], ['Nevada', 'NV'], ['New Hampshire', 'NH'], ['New Jersey', 'NJ'], ['New Mexico', 'NM'], ['New York', 'NY'], ['North Carolina', 'NC'], ['North Dakota', 'ND'], ['Ohio', 'OH'], ['Oklahoma', 'OK'], ['Oregon', 'OR'], ['Pennsylvania', 'PA'], ['Rhode Island', 'RI'], ['South Carolina', 'SC'], ['South Dakota', 'SD'], ['Tennessee', 'TN'], ['Texas', 'TX'], ['Utah', 'UT'], ['Vermont', 'VT'], ['Virginia', 'VA'], ['Washington', 'WA'], ['West Virginia', 'WV'], ['Wisconsin', 'WI'], ['Wyoming', 'WY']], {},{class: 'form-select', disabled: false} %>
  </div>
  <br>

  <div class="field">
    <%= form.file_field :images, multiple: true, id: 'thrift_images' %>
    <br>
    <% thrift.images.each do |image| %>
      <%= form.hidden_field :images, multiple: true, value: image.signed_id %>
      <%= image_tag(image, class: "img-fluid", style: "height: 200px; max-width: 100%;") %>
      <% link_to "Remove", remove_image_thrift_path(image), data: { turbo_method: :delete } %>
      <br>
    <% end %>
  </div>

  <br/>

  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>


<% end %>
