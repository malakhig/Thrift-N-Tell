<div class="comment-<%= comment.id %> container" style="border: 1px solid black; padding: 1em; margin: 1em;">
  <div class="d-flex justify-content-between align-items-start">
    <div>
      <%= avatar_for(comment.user, 50) %>
      <strong><%= comment.user.username %></strong><br/>
      <%= comment.body %>
      <hr />
      <div id="like-count-<%= comment.id %>">
      <%= render 'comments/likes', comment: comment %>
    </div>
    <div id="like-link-<%= comment.id %>">
      <%= render 'comments/like_link', comment: comment %>
    </div>
    </div>
    <% if current_user == comment.user %>
      <div>
        <%= button_to "Delete", [comment.post, comment], class: "btn btn-danger btn-sm", method: :delete %>
      </div>
    <% end %>
  </div>
  <hr />
  <span><%= time_ago_in_words(comment.created_at) %> ago</span>
</div>




<style>
  .btn:hover {
    background-color: #5e6681;
    color: #ffeba7;
    box-shadow: 0 8px 24px 0 rgb(16 39 112 / 20%);
  } 
  .btn {
    margin: 1rem 0;
    border: none;
    border-radius: 4px;
    font-weight: bold;
    font-size: .8em;
    text-transform: uppercase;
    padding: 0.6em 1.2em;
    background-color: #ffeba7;
    color: #5e6681;
    box-shadow: 0 8px 24px 0 rgb(255 235 167 / 20%);
    transition: all .3s ease-in-out;
  }
  .btn-link {
    color: #f5f5f5;
    display: block;
    font-size: .75em;
    transition: color .3s ease-out;
  }</style>